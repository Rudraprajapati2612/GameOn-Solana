{
  "name": "degen-survivor",
  "version": "0.1.0",
  "description": "Degen Survivor - Battle Royale Prediction Game on Solana",
  "license": "MIT",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:vault": "anchor test --skip-build tests/vault.test.ts",
    "test:game": "anchor test --skip-build tests/game.test.ts",
    "test:integration": "anchor test --skip-build tests/integration.test.ts",
    "build": "anchor build",
    "build:vault": "anchor build -- --package vault",
    "build:game": "anchor build -- --package game",
    "build:prize": "anchor build -- --package prize",
    "build:oracle": "anchor build -- --package oracle",
    "deploy:localnet": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "localnet": "solana-test-validator",
    "logs": "solana logs"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.8"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  }
}